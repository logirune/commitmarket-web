<section class="download_header">
    <div class="grid-container">
        <div class="grid-x">
           <h1>Download</h1>
        </div>
    </div>
</section>

<section class="download">
    <div class="grid-container">
        <div class="grid-x">
            <div class="cell large-10">
                <h2><%= @product.title %></h2>
                <h6 class="subheading">
                    <span><%=  @product.language.nil? ? 'All languages' :  @product.language.name %>
                        <%=  @product.framework.nil? ? '' : ' > ' + @product.framework.name + ' > ' %>
                        <%=  @product.category.nil? ? " > Uncategorized" :  @product.category.name %></span>
                - By <%= @product.user.first_name + " " + @product.user.last_name %></h6>
            </div>
            <div class="cell large-2 flex_center">
                <div>
                    <%= link_to "Donwload your product", rails_blob_path( @product.digital_product, disposition: "attachment"), id: "download_link" , class:"button  primary"%>
                </div>
            </div>
            <div class="cell large-12">
                <hr>
                <p><strong>By downloading this digital product, you agree with our <%= link_to "Privacy policies", legal_privacy_policies_url, class: 'link' %> and  <%= link_to "Terms of Services", legal_terms_of_services_url, class: 'link' %>. Note : No refund or support available for this product.</strong></p>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    $('#download_link').on('click', function(){
        $.ajax({
            url: "<%= product_download_register_url(@product.slug) %>",
        });
    });
</script>
